{% extends "layouts/simple.twig" %}
{% block content %}
<div
	class="row row-cols-lg-2 row-cols-sm-1 justify-content-center px-md-5 mx-md-5 px-lg-0 mx-lg-0">
	<div class="card o-hidden border-0 shadow-lg my-5">
		<div class="card-body p-0">
			<!-- Nested Row within Card Body -->
			<div class="col p-5">
				<div class="text-center">
					<h1 class="h4 text-gray-900 mb-4">
						Добро пожаловать!
					</h1>
				</div>
				{% if error %}
				<div class="alert alert-danger mb-4">
					Неверный логин или пароль.
				</div>
				{% endif %}
				<form class="user" id="loginForm" method="post">
					<div class="form-group">
						<input type="email" value="{{ last_username }}" class="form-control"
							name="email" aria-describedby="emailHelp" placeholder="Email" />
					</div>
					<div class="form-group">
						<input type="password" class="form-control" name="password"
							placeholder="Пароль" />
					</div>
					<div class="form-group">
						<div class="custom-control custom-checkbox">
							<input type="checkbox" class="custom-control-input"
								name="_remember_me" id="inputRememberMe" checked />
							<label class="custom-control-label" for="inputRememberMe">
								Запомнить вход в этом браузере
							</label>
						</div>
					</div>
					<input type="hidden" name="_csrf_token"
						value="{{ csrf_token('authenticate') }}" />
					<button type="submit" id="loginBtn" class="btn btn-primary btn-block">
						Войти
					</button>
				</form>
				<hr />
				<div class="text-center">
					<a id='recover_password' href="#">
						Забыли пароль?
					</a>
				</div>
				<div class="text-center">
					<a href="{{ path('register') }}">Регистрация</a>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}
