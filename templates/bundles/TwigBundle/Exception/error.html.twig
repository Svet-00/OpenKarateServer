{% extends "layouts/simple.twig" %} {% block content %}

<!-- Begin Page Content -->
<div class="row my-5">
  <div class="col">
    <div class="card shadow">
      <div class="card-body">
        <!-- Error Text -->
        <div class="text-center">
          <div class="error mx-auto" data-text="{{ exception.statusCode }}">
            {{ exception.statusCode }}</div>
          <p class="lead text-gray-800 mb-5">Похоже что-то пошло не так...</p>
          {% if app.environment =='dev' %}
          <p class="text-gray-500 mb-0">
            {{ exception.message }}
          </p>
          {% endif %}
          <a href="#" class="backlink">&larr; Назад</a> или <a
            href="{{ path('profile') }}">Профиль</a>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
